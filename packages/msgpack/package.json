{
  "name": "@urlpack/msgpack",
  "version": "0.0.1",
  "license": "MIT",
  "sideEffects": false,
  "source": "./src/index.ts",
  "main": "./src/index.ts",
  "publishConfig": {
    "access": "public",
    "main": "./lib/index.js",
    "module": "./lib/index.module.js",
    "types": "./lib/index.d.ts",
    "exports": {
      ".": {
        "require": "./lib/index.js",
        "import": "./lib/index.module.js"
      },
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "test": "uvu -r esbuild-register",
    "test:watch": "yarn test || true && watchlist src tests -- yarn test",
    "build": "concurrently \"yarn:build:*\"",
    "build:cjs": "esbuild src/index.ts --bundle --sourcemap --minify --format=cjs --platform=node --target=node12 --outfile=lib/index.js",
    "build:esm": "esbuild src/index.ts --bundle --sourcemap --minify --format=esm --outfile=lib/index.module.js",
    "build:dts": "tsc --emitDeclarationOnly",
    "_build": "microbundle",
    "_dev": "microbundle watch",
    "prepack": "yarn build"
  },
  "files": [
    "src",
    "lib",
    "README",
    "LICENSE"
  ],
  "devDependencies": {
    "concurrently": "^6.2.0",
    "esbuild": "^0.12.15",
    "esbuild-register": "^2.6.0",
    "microbundle": "^0.13.3",
    "typescript": "^4.3.5",
    "uvu": "^0.5.1",
    "watchlist": "^0.2.3"
  }
}
